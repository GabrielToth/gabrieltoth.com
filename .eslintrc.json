{
    "extends": [
        "next/core-web-vitals",
        "@next/eslint-config-next",
        "eslint:recommended",
        "@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["@typescript-eslint", "react", "react-hooks", "jsx-a11y"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"],
        "no-console": ["warn"],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ],
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/prefer-const": "error",
        "@typescript-eslint/no-var-requires": "error",
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "react/display-name": "error",
        "react/jsx-key": "error",
        "react/jsx-no-duplicate-props": "error",
        "react/jsx-no-undef": "error",
        "react/jsx-uses-react": "off",
        "react/jsx-uses-vars": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "jsx-a11y/alt-text": "error",
        "jsx-a11y/aria-props": "error",
        "jsx-a11y/aria-proptypes": "error",
        "jsx-a11y/aria-unsupported-elements": "error",
        "jsx-a11y/role-has-required-aria-props": "error",
        "jsx-a11y/role-supports-aria-props": "error",
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "prefer-template": "error",
        "id-match": [
            "error",
            "^(?![a-z]*([àáâãäåæçèéêëìíîïñòóôõöøùúûüýÿ]|ção|ções|usuario|perfil|senha|nome|preco|valor|botao|usuario|descricao|configuracao|funcionalidade|categoria|projeto|servico|produto|cliente|empresa|dados|informacao|processo|sistema|aplicacao|desenvolvimento|programacao|tecnologia))[a-zA-Z0-9_$]*$",
            {
                "properties": true,
                "onlyDeclarations": true,
                "ignoreDestructuring": false
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    { "argsIgnorePattern": "^_" }
                ]
            }
        }
    ]
}
