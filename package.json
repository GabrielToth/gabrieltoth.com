{
    "name": "gabrieltoth.com",
    "version": "1.8.19",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc --noEmit",
        "spell-check": "cspell \"src/**/*.{ts,tsx,js,jsx,md,json}\"",
        "spell-check:fix": "cspell \"src/**/*.{ts,tsx,js,jsx,md,json}\" --fix",
        "test": "vitest --run --passWithNoTests",
        "test:unit": "vitest --run --passWithNoTests",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --run --coverage",
        "test:all": "npm run type-check && npm run lint && npm run format:check && npm run spell-check && npm test",
        "clean": "Remove-Item -Recurse -Force .next, dist, out -ErrorAction SilentlyContinue",
        "prepare": "husky",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:report": "playwright show-report",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "analyze": "ANALYZE=true npm run build",
        "analyze:open": "ANALYZE=true npm run build && open .next/analyze",
        "lighthouse": "lhci autorun",
        "lighthouse:ci": "lhci collect && lhci assert",
        "perf": "npm run build && npm run analyze",
        "perf:full": "npm run build && npm run analyze && npm run lighthouse",
        "bundle:size": "npm run build && node -e \"const fs=require('fs'); const path=require('path'); const getBundleSize=dir=>{let size=0; fs.readdirSync(dir).forEach(file=>{const filePath=path.join(dir,file); const stat=fs.statSync(filePath); if(stat.isDirectory()){size+=getBundleSize(filePath);}else{size+=stat.size;}}); return size;}; console.log('Bundle size:', (getBundleSize('.next')/1024/1024).toFixed(2) + 'MB');\"",
        "metrics:gsc": "node scripts/gsc-api-extract.js",
        "metrics:psi": "node scripts/psi-extract.js"
    },
    "dependencies": {
        "@icons-pack/react-simple-icons": "^13.8.0",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-tabs": "^1.1.13",
        "@types/qrcode": "^1.5.6",
        "@upstash/ratelimit": "2.0.7",
        "@upstash/redis": "1.35.7",
        "@vercel/analytics": "^1.6.1",
        "@vercel/speed-insights": "^1.3.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.556.0",
        "next": "16.1.5",
        "next-intl": "^4.5.8",
        "next-seo": "^7.0.1",
        "qrcode": "^1.5.4",
        "qrcode.react": "^4.2.0",
        "react": "^19.2.1",
        "react-dom": "^19.2.1",
        "react-icons": "^5.5.0",
        "resend": "^6.5.2",
        "tailwind-merge": "^3.4.0",
        "web-vitals": "^5.1.0"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^4.1.3",
        "@cspell/dict-de-de": "^4.1.2",
        "@cspell/dict-es-es": "^3.0.8",
        "@cspell/dict-pt-br": "^2.4.2",
        "@eslint/eslintrc": "^3",
        "@lhci/cli": "^0.15.1",
        "@next/bundle-analyzer": "^16.0.8",
        "@playwright/test": "^1.57.0",
        "@storybook/addon-a11y": "^10.1.5",
        "@storybook/addon-docs": "^10.1.5",
        "@storybook/addon-onboarding": "^10.1.5",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "^4",
        "@tailwindcss/typography": "^0.5.19",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "@vitest/coverage-v8": "^4.0.15",
        "cspell": "^9.4.0",
        "cspell-dict-pt-br": "^1.1.1",
        "eslint": "^9",
        "eslint-config-next": "16.0.8",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-storybook": "^10.1.5",
        "googleapis": "^167.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "node-fetch": "^3.3.2",
        "prettier": "^3.7.4",
        "speed-measure-webpack-plugin": "^1.5.0",
        "storybook": "^10.1.5",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5",
        "vitest": "^4.0.15",
        "webpack-bundle-analyzer": "^5.1.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
