        "react-dom": "^19.0.0",
        "tailwind-merge": "^3.3.0"
    },
    "devDependencies": {
        "@cspell/dict-pt-br": "^2.4.0",
        "@eslint/eslintrc": "^3",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "^4",
        "@tailwindcss/typography": "^0.5.16",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
