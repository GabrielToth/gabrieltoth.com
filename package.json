        "tw-animate-css": "^1.3.4",
        "typescript": "^5",
        "vitest": "^3.2.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
